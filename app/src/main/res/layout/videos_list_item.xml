<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gray_border"
    android:orientation="horizontal"
    android:padding="@dimen/details_reviews_item_padding"

    >

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:layout_gravity="center"
        >

        <ImageView
            android:layout_width="@dimen/details_reviews_img_width"
            android:layout_height="@dimen/details_reviews_img_height"
            android:src="@drawable/ic_play_button"
            android:layout_gravity="center" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical">
        <TextView
            android:id="@+id/video_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="VIDEO TITLE"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
        <TextView
            android:id="@+id/video_site_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Youtube"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"/>
    </LinearLayout>

</LinearLayout>