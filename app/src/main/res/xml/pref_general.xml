<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/pref_category_sorting_label">
        <ListPreference
            android:defaultValue="@string/pref_sort_order_popularity_key"
            android:entries="@array/pref_sort_order_entries"
            android:entryValues="@array/pref_sort_order_entry_values"
            android:key="@string/pref_sort_order_key"
            android:title="@string/pref_sort_order_label" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/pref_category_player_label">
        <ListPreference
            android:defaultValue="@string/pref_videos_embedded_key"
            android:entries="@array/pref_videos_entries"
            android:entryValues="@array/pref_videos_entry_values"
            android:key="@string/pref_videos_key"
            android:title="@string/pref_videos_label" />
    </PreferenceCategory>
</PreferenceScreen>